@using MVCWFRONT.Areas.Admin.ViewModels.Product
@model List<GetProductVM>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <a asp-action="create" class="btn btn-success">Add Product</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    CategoryName
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (GetProductVM getProductVM in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/website-images/@getProductVM.Image" alt="">
                                    </td>
                                    <td>
                                        @getProductVM.Name
                                    </td>
                                    <td>
                                        @getProductVM.Price
                                    </td>
                                    <td>
                                        @getProductVM.CategoryName
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@getProductVM.Id" class="btn btn-warning">
                                            <i class="mdi mdi-grease-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger" asp-action="delete" asp-route-id="@getProductVM.Id"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-dots-vertical"></i></a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>