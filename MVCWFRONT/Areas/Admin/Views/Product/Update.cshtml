@using MVCWFRONT.Areas.Admin.ViewModels.Product
@using MVCWFRONT.Models
@model UpdateProductVM
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Product</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label for="SKU">SKU</label>
                        <input asp-for="SKU" class="form-control" placeholder="SKU">
                        <span asp-validation-for="SKU" style="color:red"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId">Category</label>

                        <select asp-for="CategoryId" name="CategoryId" id="CategoryId" asp-items="new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.Name))">
                        </select>
                        <span asp-validation-for="CategoryId" style="color:red"></span>
                    </div>
                    @* <div class="form-group">
                        <label asp-for="CategoryId">Category</label>
                       
                       <select asp-for="CategoryId" name="CategoryId" id="CategoryId">
                          @foreach(Category category in Model.Categories){
                            <option value="@category.Id">@category.Name</option>
                          }
                          <option selected disabled value="">Choose</option>
                       </select>
                        <span asp-validation-for="CategoryId" style="color:red"></span>
                    </div> *@

                    <div class="form-group">
                        <label for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                        <span asp-validation-for="Description" style="color:red"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>